<div class="row">
	<div class="col-xs-6 col-xs-offset-3">
		<h2>Welcome Back!</h2>
		<%= form_for :user, url: login_path do |f| -%>
		  <div class="form-group">
		  	<%= f.label :email, "Email" %>
		  	<%= f.text_field :email, placeholder: "email@myemail.com", class: "form-control" %>
		  </div>
		  <div class="form-group">
		  	<%= f.label :password, "Password" %>
		  	<%= f.password_field :password, class: "form-control" %>
		  </div>
		 	<%= f.submit "Log In", class: "btn btn-primary submit-btn" %>
		<% end %>
		<div class="login-footer">
			<p>Don't have an account? <%= link_to "Sign up now!", signup_path %></p>
		</div>
	</div>
	</div>

