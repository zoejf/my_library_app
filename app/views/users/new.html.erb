<div class="container">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<span class="header session">Sign Up</span>
			<%= form_for :user, url: '/users' do |f| %>
			  <div class="form-group">
			  	<%= f.label :name, "Full Name" %>
			  	<%= f.text_field :name, placeholder: "James P. Smith", required: true, class: "form-control" %>
			  </div>
			  <div class="form-group">
			  	<%= f.label :email %>
			  	<%= f.email_field :email, placeholder: "email@myemail.com", required: true, class: "form-control" %>
			  </div>
			  <div class="form-group">
			  	<%= f.label :password %>
			  	<%= f.password_field :password, required: true, class: "form-control" %>
			  	<span class="help-block"> Password must be at least 6 characters long</span>
			  </div>
			  <div class="form-group">
			  	<%= f.label :password_confirmation %>
			  	<%= f.password_field :password_confirmation, required: true, class: "form-control" %>
			  </div>
			  <%= f.submit "Sign Up", class: "btn btn-primary submit-btn" %>
			<% end %>
			<div class="login-footer">
				<p>Already a member? <%= link_to "Log in here.", login_path %></p>
			</div>
		</div>
	</div>
</div>
